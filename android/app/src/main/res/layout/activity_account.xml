<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:ignore="HardcodedText">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:src="@drawable/close"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:id="@+id/avatar"
        android:src="@drawable/big_avatar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar"
        android:id="@+id/username"
        android:text="Username"
        android:textSize="45sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/user_data"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <LinearLayout
            style="@style/UserInformationView">
            <TextView
                style="@style/UserInformationTextStyle"
                android:layout_weight="1"
                android:text="Город:"
                android:textAlignment="textStart"/>

            <TextView
                style="@style/UserInformationTextStyle"
                android:layout_weight="3"
                android:text="Самара"
                android:textAlignment="textEnd"/>
        </LinearLayout>

        <LinearLayout
            style="@style/UserInformationView">
            <TextView
                style="@style/UserInformationTextStyle"
                android:layout_weight="1"
                android:text="Email:"
                android:textAlignment="textStart"/>

            <TextView
                style="@style/UserInformationTextStyle"
                android:layout_weight="3"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/email"
                android:textAlignment="textEnd"/>
        </LinearLayout>

        <LinearLayout
            style="@style/UserInformationView">
            <TextView
                style="@style/UserInformationTextStyle"
                android:layout_weight="1"
                android:text="Интересы:"
                android:textAlignment="textStart"/>

            <TextView
                style="@style/UserInformationTextStyle"
                android:layout_weight="1"
                android:text="Java, Figma"
                android:textAlignment="textEnd"/>
        </LinearLayout>

        <LinearLayout
            style="@style/UserInformationView">
            <TextView
                style="@style/UserInformationTextStyle"
                android:layout_weight="1"
                android:text="Возраст:"
                android:textAlignment="textStart"/>

            <TextView
                style="@style/UserInformationTextStyle"
                android:layout_weight="2"
                android:text="19"
                android:textAlignment="textEnd"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/settingsButton"
        style="@style/AccountButtons"
        android:layout_height="wrap_content"
        android:text="Настройки"
        app:layout_constraintTop_toBottomOf="@+id/user_data"
        app:strokeColor="#33333C"
        app:strokeWidth="2dp" />

    <Button
        style="@style/AccountButtons"
        android:text="Выйти из аккаунта"
        app:layout_constraintTop_toBottomOf="@+id/settingsButton"
        app:strokeColor="#34343D"
        app:strokeWidth="2dp" />


</androidx.constraintlayout.widget.ConstraintLayout>