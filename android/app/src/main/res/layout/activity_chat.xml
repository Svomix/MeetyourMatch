<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        style="@style/Header"
        android:id="@+id/topBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            style="@style/HeaderButton"
            android:drawableTop="@drawable/bell"/>


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginHorizontal="50dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center"/>


        <Button
            style="@style/HeaderButton"
            android:drawableTop="@drawable/avatar"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <LinearLayout
            style="@style/ChatTable">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/avatar"/>

            <LinearLayout
                style="@style/ChatUsernameAndMessage">

                <TextView
                    style="@style/ChatUsername"
                    android:text="Иван Иванов"/>

                <TextView
                    style="@style/ChatMessage"
                    android:text="Привет, сегодня выйдешь гулять?"/>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                style="@style/ChatLastMessageTime"
                android:text="16:03"/>
        </LinearLayout>

        <LinearLayout
            style="@style/ChatTable">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/avatar"/>

            <LinearLayout
                style="@style/ChatUsernameAndMessage">

                <TextView
                    style="@style/ChatUsername"
                    android:text="Александр Александрович"/>

                <TextView
                    style="@style/ChatMessage"
                    android:text="Привет, приходи, посмотрим кино"/>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                style="@style/ChatLastMessageTime"
                android:text="16:03"/>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:paddingTop="5dp"
        android:paddingBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/bars">

        <Button
            style="@style/NavigationButtons"
            android:drawableTop="@drawable/chosen_chat"
            android:text="@string/chat"/>

        <Button
            style="@style/NavigationButtons"
            android:drawableTop="@drawable/search"
            android:text="@string/search"/>

        <Button
            style="@style/NavigationButtons"
            android:drawableTop="@drawable/range"
            android:text="@string/event"/>

        <Button
            style="@style/NavigationButtons"
            android:drawableTop="@drawable/location_pin"
            android:text="@string/map"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>